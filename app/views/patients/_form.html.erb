<%= form_with(model: patient, local: true) do |form| %>
  <% if patient.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(patient.errors.count, "error") %> prohibited this patient from being saved:</h2>

      <ul>
      <% patient.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <br>
  
  <div class="row">
    <div class="col-md-1">
        <%= form.label :name.to_s + ":" %>
    </div>
    <div class="col-md-1">
        <%= form.text_field :name, id: :patient_name %>
    </div>
  </div><br>
  
  <div class="row">
    <div class="col-md-1">
        <%= form.label :dob.to_s + ":" %>
    </div>
    <div class="col-md-1">
        <%= form.text_field :dob, id: :patient_dob %>
    </div>
  </div><br>
  
  <div class="row">
    <div class="col-md-1">
        <%= form.label :address.to_s + ":" %>
    </div>
    <div class="col-md-1">
        <%= form.text_field :address, id: :patient_address %>
    </div>
  </div><br>

  <div class="row">
    <div class="col-md-1">
        <%= form.label :phone.to_s + ":" %>
    </div>
    <div class="col-md-1">
        <%= form.text_field :phone, id: :patient_phone %>
    </div>
  </div><br>

  <div class="actions">
    <%= form.submit :Submit, class:'btn btn-success' %>
  </div>
<% end %>
